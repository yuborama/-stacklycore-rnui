{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "baseUrl": "./",
    "declaration": true,
    "declarationDir": "build",
    "module": "esnext",
    "target": "es5",
    "lib": ["es6", "dom", "es2016", "es2017", "dom.iterable"],
    "sourceMap": true,
    "jsx": "preserve",
    "moduleResolution": "node",
    "downlevelIteration": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    // "jsxImportSource": "@emotion/react",
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "incremental": true,
    "resolveJsonModule": true,
    "isolatedModules": true,

    "paths": {
      // "@ixulabs/nativeui": ["index.ts"],
      "@atoms": ["./core/@atoms/index.ts"],
      "@atoms/*": ["./core/@atoms/*"]
      // "components/*": ["src/components/*"],
      // "context/*": ["src/context/*"],
      // "gql/*": ["src/gql/*"],
      // "types/*": ["src/types/*"],
      // "utils/*": ["src/utils/*"]
    }
  },
  "include": ["**/*", "**/*x", "**/*.ts", "**/*.tsx"],
  "exclude": [
    "node_modules",
    "../../node_modules",
    "dist",
    "src/**/*.stories.*",
    "src/**/*.test.*",
    "build",
    "src",
    "app.tsx",
    "index.js",
    "index.d.ts"
  ]
}
